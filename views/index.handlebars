<div class="container">
	
	<div class="row">
	    <div class="col-sm-12">
			<img src="public/assets/img/burger.png" alt="Eat-Da-Burger App">
	        <h3>Eat-Da-Burger App</h3>
	        <p></p>
	    </div>
  	</div>

	<div class="row">
	    <div class="col-sm-6">

			<h2>Burgers Available To Eat!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button type="submit">Devoured Burger!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>


	    <div class="col-sm-6">

			<h2>Burgers That Have Been Eaten!</h2>

			<ul>
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			</ul>

	    </div>

  	</div>


	<div class="row">
	    <div class="col-sm-12">

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <label for="ca"></label>
			    <input type="text" id="ca" name="burger_name">
			  </div>

			  <button type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>


</div>
